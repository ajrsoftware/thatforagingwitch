{% extends "base.twig" %}

{% block content %}

	{% do action('woocommerce_before_single_product') %}

	<section itemscope itemtype="http://schema.org/Product" class="mt-12 mb-24 grid grid-cols-1 lg:grid-cols-12 gap-16 single-product-details {{ post.class }}">

		<div class="entry-images relative lg:col-span-5">
			{% do action('woocommerce_before_single_product_summary') %}
		</div>

		<div class="summary entry-summary lg:col-span-7">
			{% do action('woocommerce_single_product_summary') %}

			<div class="leading-relaxed">
				{{post.content}}
			</div>
		</div>

		{# {% do action('woocommerce_after_single_product_summary') %} #}

		<meta itemprop="url" content="{{ post.link }}"/>

	</section>

	<section>
		<h2 class="text-2xl">You may also like</h2>
		{% include ["woo/tease-product.twig"] with { products: related_products } %}
	</section>

	{% do action('woocommerce_after_single_product') %}

{% endblock  %}
